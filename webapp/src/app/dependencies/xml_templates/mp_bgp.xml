<config xmlns="urn:ietf:params:xml:ns:netconf:base:1.0">
    <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
    <router>
            <bgp xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-bgp">
                <id>{{data.bgp_local_asn}}</id>
                <bgp>
                    <log-neighbor-changes>true</log-neighbor-changes>
                    <router-id>
                    <ip-id>{{data.bgp_router_id}}</ip-id>
                  </router-id>
                </bgp>
                {% if data.neighbor_data %}
                {% for neighbor in data.neighbor_data %}
                {% if neighbor.unicast %}
                <neighbor>
                    <id>{{neighbor.bgp_neighbor_addr}}</id>
                    <remote-as>{{neighbor.bgp_remote_asn}}</remote-as>
                    <update-source>
                        <interface>
                            <Loopback>{{neighbor.bgp_source_loopback}}</Loopback>
                        </interface>
                    </update-source>
                </neighbor>
                {% endif %}
                {% if neighbor.vpnv4 %}
                <address-family>
                    <with-vrf>
                        <ipv4>
                            <af-name>unicast</af-name>
                            <vrf>
                                <name>{{neighbor.vrf_name}}</name>
                                <ipv4-unicast>
                                    <redistribute-vrf>
                                        <connected/>
                                    </redistribute-vrf>
                                </ipv4-unicast>
                            </vrf>
                        </ipv4>
                    </with-vrf>
                    <no-vrf>
                        <vpnv4>
                            <af-name>unicast</af-name>
                            <vpnv4-unicast>
                                <neighbor>
                                    <id>{{neighbor.bgp_neighbor_addr}}</id>
                                    <activate/>
                                    <send-community>
                                        <send-community-where>extended</send-community-where>
                                    </send-community>
                                </neighbor>
                            </vpnv4-unicast>
                        </vpnv4>
                    </no-vrf>
                </address-family>
                {% endif %}
                {% endfor %}
                {% endif %}
            </bgp>
        </router>
    </native>
</config>