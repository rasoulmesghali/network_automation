<config xmlns="urn:ietf:params:xml:ns:netconf:base:1.0">
    <native xmlns="http://cisco.com/ns/yang/Cisco-IOS-XE-native">
        <interface>
            <Loopback>
                <name>{loopback_number}</name>
                <ip>
                    <vrf>
                        <forwarding>
                            <word>{vrf_name}</word>
                        </forwarding>
                    </vrf>
                    <address>
                        <primary>
                            <address>{ipv4}</address>
                            <mask>{ipv4_mask}</mask>
                        </primary>
                    </address>
                </ip>
            </Loopback>
        </interface>
    </native>
</config>